@model List<ContactViewModel>

<div class="container">

    <form asp-controller="Contact" asp-action="UploadFile" method="post" enctype="multipart/form-data" class="upload-form">
        <input type="file" name="file" id="fileInput" accept=".csv" required style="display: none;" />
        <label for="fileInput" class="btn-upload">Choose File</label>
        <span class="file-name" id="fileName">No file chosen</span>
        <button type="submit" class="btn-upload">Upload CSV</button>
    </form>

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">
            @TempData["ErrorMessage"]
        </div>
    }

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">
            @TempData["SuccessMessage"]
        </div>
    }

    <table class="contact-table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Date of Birth</th>
                <th>Married</th>
                <th>Phone</th>
                <th>Salary</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var contact in Model)
            {
                <tr data-id="@contact.Id">
                    <td class="name-cell" title="@contact.Name">
                        @contact.Name
                    </td>
                    <td>@contact.DateOfBirth.ToString("dd.MM.yyyy")</td>
                    <td>
                        <span class="badge @(contact.Married ? "badge-yes" : "badge-no")">
                            @(contact.Married ? "Yes" : "No")
                        </span>
                    </td>
                    <td>@contact.Phone</td>
                    <td>@contact.Salary.ToString("C")</td>
                    <td>
                        <div class="edit-actions">
                            <button class="btn btn-edit" onclick='editRow(this)'>Edit</button>
                            <button class="btn btn-delete" onclick="deleteContact('@contact.Id')">Delete</button>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<script src="~/js/sort.js"></script>
<script src="~/js/deleteContact.js"></script>
<script src="~/js/updateContact.js"></script>